# AI Assistant Environment Configuration
# Copy this file to .env and update with your actual values

# ====================
# OpenAI API Configuration
# ====================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model Settings
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-small

# AI Response Settings
MAX_TOKENS=1000
TEMPERATURE=0.3
TOP_K_DOCUMENTS=5

# ====================
# Database Configuration
# ====================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ai_assistant
DB_USER=your_database_username
DB_PASSWORD=your_database_password

# ====================
# Application Settings
# ====================
# Set to false in production
DEBUG_MODE=true

# Session Configuration
SESSION_TIMEOUT=3600

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,txt

# ====================
# Security Settings
# ====================
# Change this to a secure random string
SECRET_KEY=your-secret-key-here

# Password Security (for future bcrypt implementation)
PASSWORD_HASH_ALGO=bcrypt
PASSWORD_COST=12

# ====================
# Optional Features
# ====================
# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_GUEST_CHAT=true
ENABLE_FILE_UPLOAD=true

# Rate Limiting (requests per minute)
RATE_LIMIT_CHAT=60
RATE_LIMIT_UPLOAD=10

# ====================
# External Services
# ====================
# PDF Processing (optional)
PDFTOTEXT_PATH=/usr/bin/pdftotext

# Email Configuration (for future notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_NAME=AI Assistant

# ====================
# Development Settings
# ====================
# Log levels: debug, info, warning, error
LOG_LEVEL=info

# Error reporting in development
DISPLAY_ERRORS=true
ERROR_REPORTING=E_ALL

# ====================
# Production Settings
# ====================
# Uncomment these for production deployment

# Force HTTPS
# FORCE_HTTPS=true

# Domain configuration
# APP_DOMAIN=yourdomain.com
# APP_URL=https://yourdomain.com/ai-assistant/

# CDN Settings (optional)
# CDN_URL=https://cdn.yourdomain.com

# Cache settings
# ENABLE_CACHE=true
# CACHE_TTL=3600

# ====================
# Monitoring & Analytics
# ====================
# Usage tracking
ENABLE_ANALYTICS=false

# Error tracking (Sentry, etc.)
# ERROR_TRACKING_DSN=your-error-tracking-dsn

# Performance monitoring
# APM_SERVICE_NAME=ai-assistant
# APM_SERVER_URL=your-apm-server-url